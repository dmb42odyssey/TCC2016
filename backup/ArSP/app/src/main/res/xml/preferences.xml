<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference android:title="Atualização do aplicativo"
        android:defaultValue="true"
        android:summary="Permitir que o aplicativo verifique a existências de novas versões."
        android:key="applicationUpdates" />
    <ListPreference android:title="Grupo"
        android:summary="Selecione o perfil que se encaixe melhor em relação a suas condições de saúde. \n(Sensível: Pessoas com doenças respiratórias, ou com histórico de problemas cardiovaculares.)"
        android:key="perfilsaude"
        android:defaultValue="1"
        android:entries="@array/listadegrupos"
        android:entryValues="@array/listadegruposvalores"
        />
    <ListPreference android:title="Região de Exibição"
        android:summary="Filtro para exibição de estações.\n(Não subtrai estações para o cálculo do Índice local."
        android:key="exibicao"
        android:defaultValue="1"
        android:entries="@array/listadeestacoes"
        android:entryValues="@array/listadeestacoesvalores"
        />
</PreferenceScreen>